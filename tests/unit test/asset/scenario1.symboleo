/* 
 * Description: make and instantiate an asset module
 * Cover asset concept and relationship with contract
 * Challenge: set an asset's attribute
 * */

Domain domain
Role1 isA Role with party: String;
Role2 isA Role with party: String;
Asset1 isAn Asset with owner: String, att1: Number;
Event1 isAn Event;
endDomain

Contract contr (party1: String, party2: String, att_val1 : Asset1, owner : String)

Declarations
role1: Role1 with party:= party1;
role2: Role2 with party:= party2;
event1: Event1;

Obligations
obl1: O(role1, role2, true, Happens(event1));

endContract